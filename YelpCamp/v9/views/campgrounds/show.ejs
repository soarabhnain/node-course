<% include ../partials/header %>

<h2><%= campground.name %></h2>
        <img src="<%= campground.image %>">
        <p><%= campground.description %></p>

        <% campground.comments.forEach(function(comment){ %>
            <div>
                <h4><%= comment.author.username %></h4>
                <p><%= comment.text %></p>
                <a href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit" class="btn btn-sm btn-outline-warning">Edit</a>
                <form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-outline-danger" type="submit">Delete Comment</button></form>
            </div>
        <% }) %>

        <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-outline-primary">Add New Comment</a>

        <h4 class="display-6"><em>Submitted by: <%= campground.author.username %></em></h4>

        <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
            <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-success">Edit Campground</a>
            <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-danger" type="submit">Delete Campground</button>
            </form>
        <% } %>

        

<% include ../partials/footer %>