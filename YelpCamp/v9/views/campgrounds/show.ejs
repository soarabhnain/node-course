<% include ../partials/header %>

<h2><%= campground.name %></h2>
        <img src="<%= campground.image %>">
        <p><%= campground.description %></p>

        <% campground.comments.forEach(function(comment){ %>
            <div>
                <h4><%= comment.author.username %></h4>
                <p><%= comment.text %></p>
            </div>
        <% }) %>

        <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-primary">Add New Comment</a>

        <h4 class="display-6"><em>Submitted by: <%= campground.author.username %></em></h4>

        <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-success">Edit Campground</a>

<% include ../partials/footer %>